{
  "name": "chat-microservice",
  "version": "0.0.1",
  "author": "Niklas Sauer",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "fix:lint": "eslint --fix '{src,test}/**/*.ts'",
    "fix:format": "prettier --write .",
    "gcp-build": "yarn build"
  },
  "dependencies": {
    "@google-cloud/bigtable": "^3.2.0",
    "@google-cloud/firestore": "^4.9.4",
    "@nestjs/common": "^7.6.11",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.12",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/platform-ws": "^7.6.11",
    "@nestjs/swagger": "^4.7.13",
    "@nestjs/websockets": "^7.6.12",
    "@voxpelli/passport-dummy": "^1.0.0",
    "axios": "^0.21.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.12.2",
    "cross-env": "^7.0.3",
    "jwks-rsa": "^1.12.2",
    "jwt-decode": "^3.1.2",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/platform-socket.io": "^7.6.5",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.25",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.36",
    "@types/passport-jwt": "^3.0.3",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "iso-datestring-validator": "^2.1.4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.7",
    "prettier": "^2.1.2",
    "qs": "^6.9.6",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write",
    "src/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
